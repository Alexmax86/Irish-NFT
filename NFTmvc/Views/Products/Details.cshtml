@{
    ViewData["Title"] = "Details";
}
<div class="container">
    <img class="card-img-top" src="@Model.ImgLink" alt="Card image cap">
    <p>Name: @Model.Name</p>
    <p>Description: @Model.Description</p>
    <p>Author: @Model.CreatedBy</p>
    <p>Category: @Model.Category</p>
    <p>Price @Model.Cost</p>
    <a asp-area="" asp-controller="Products" asp-action="Buy" asp-route-id="@Model.Id" class="btn btn-primary">Buy</a>
</div>




